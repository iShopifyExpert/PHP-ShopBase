{
    "name": "jregner/php-shopbase",
    "description": "Simple library which helps setting up a shop in PHP",
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Jonas Regner",
            "email": "jonas.regner@akrillia.io"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-intl": "*",
        "symfony/intl": "^4.2",
        "doctrine/collections": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "jregner\\ShopBase\\": "src/"
        }
    },
    "scripts": {
        "php-cs-fixer": "php-cs-fixer fix --config .php_cs",
        "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests"
    }
}
